{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts"],
  "exclude": [".git", "node_modules"]
}
